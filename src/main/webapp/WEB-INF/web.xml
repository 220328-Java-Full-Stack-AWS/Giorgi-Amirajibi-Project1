<?xml version="1.0" encoding="UTF-8"?>

<web-app
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
        version="2.5">


        <listener>
            <listener-class>com.revature.Services.DependencyLoaderListener</listener-class>
        </listener>

        <servlet>
            <servlet-name>registration</servlet-name>
            <servlet-class>com.revature.Servlets.RegistrationServlet</servlet-class>
        </servlet>
    
        <servlet-mapping>
            <servlet-name>registration</servlet-name>
            <url-pattern>/registration</url-pattern>
        </servlet-mapping>
    
        <servlet>
            <servlet-name>login</servlet-name>
            <servlet-class>com.revature.Servlets.LoginServlet</servlet-class>
        </servlet>
    
        <servlet-mapping>
            <servlet-name>login</servlet-name>
            <url-pattern>/login</url-pattern>
        </servlet-mapping>
    
        <servlet>
            <servlet-name>PingServlet</servlet-name>
            <servlet-class>com.revature.Servlets.PingServlet</servlet-class>
        </servlet>
    
        <servlet-mapping>
            <servlet-name>PingServlet</servlet-name>
            <url-pattern>/ping</url-pattern>
        </servlet-mapping>
</web-app>